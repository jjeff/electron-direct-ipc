{
  "name": "electron-direct-ipc",
  "version": "1.0.3",
  "nudge": "1",
  "description": "Type-safe, high-performance inter-process communication for Electron applications.",
  "main": "dist/cjs/main/DirectIpcMain.js",
  "module": "dist/esm/main/DirectIpcMain.js",
  "types": "dist/esm/main/DirectIpcMain.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/main/DirectIpcMain.js",
      "require": "./dist/cjs/main/DirectIpcMain.js",
      "types": "./dist/esm/main/DirectIpcMain.d.ts"
    },
    "./main": {
      "import": "./dist/esm/main/DirectIpcMain.js",
      "require": "./dist/cjs/main/DirectIpcMain.js",
      "types": "./dist/esm/main/DirectIpcMain.d.ts"
    },
    "./renderer": {
      "import": "./dist/esm/renderer/DirectIpcRenderer.js",
      "require": "./dist/cjs/renderer/DirectIpcRenderer.js",
      "types": "./dist/esm/renderer/DirectIpcRenderer.d.ts"
    },
    "./renderer/throttled": {
      "import": "./dist/esm/renderer/DirectIpcThrottled.js",
      "require": "./dist/cjs/renderer/DirectIpcThrottled.js",
      "types": "./dist/esm/renderer/DirectIpcThrottled.d.ts"
    },
    "./common": {
      "import": "./dist/esm/common/DirectIpcCommunication.js",
      "require": "./dist/cjs/common/DirectIpcCommunication.js",
      "types": "./dist/esm/common/DirectIpcCommunication.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "directories": {},
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:pkg",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:pkg": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:e2e": "npm run build && cd test-app && npm install && npm run build",
    "e2e": "npm run build && cd test-app && npm install && npm run start",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write \"{src,tests,test-app}/**/*.{ts,js,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run build:e2e && playwright test",
    "test:e2e:debug": "npm run build:e2e && playwright test --debug",
    "test:e2e:headed": "npm run build:e2e && playwright test --headed",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --options typedoc.json",
    "docs:publish": "gh-pages -d docs/api",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "electron",
    "ipc",
    "typescript",
    "messagechannel",
    "renderer",
    "main-process"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jjeff/electron-direct-ipc.git"
  },
  "author": "Jeff Robbins <jeff@jjeff.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "electron": "^39.2.4",
    "eslint": "^9.39.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.3",
    "semantic-release": "^25.0.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^1.6.1"
  }
}